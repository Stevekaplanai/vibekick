{
  "manifest_version": 3,
  "name": "VibeKick - Your Vibe Coding Sidekick",
  "version": "1.0.0",
  "description": "Quick prompts for vibe coding. Search, customize, copy.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://api.openai.com/*"
  ],
  "author": "Steve Kaplan"
}